{
  "name": "xsd",
  "displayName": "XSD to JSON Converter",
  "description": "This will help to convert XSD to JSON",
  "version": "1.0.0",
  "publisher": "pixelbyaj",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "repository":"https://github.com/pixelbyaj/vsc_xsd.git",  
  "icon": "images/xsd-icon.png",
  "activationEvents": [
    "onCommand: xsd.xsdtojson",
    "onLanguage: xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xsd.xsdtojson",
        "title": "XSD: JSON"
      }
    ],
    "keybindings": [
      {
        "command": "xsd.xsdtojson",
        "key": "ctrl+alt+j",
        "mac": "cmd+alt+j",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "XSD",
      "properties": {
        "Xsd.apiURL": {
          "type": "string",
          "default": "",
          "description": "Custom API URL to convert XSD to JSON"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
