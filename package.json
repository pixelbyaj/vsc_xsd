{
  "name": "xsd",
  "displayName": "XSD to JSON Converter",
  "description": "Ideal to convert XSD to JSON.",
  "version": "1.3.7",
  "publisher": "pixelbyaj",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixelbyaj/vsc_xsd.git"
  },
  "homepage": "https://github.com/pixelbyaj/vsc_xsd/blob/main/README.md",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/xsd-icon.png",
  "galleryBanner": {
    "color": "#373436",
    "theme": "dark"
  },
  "keywords": [
    "XSD",
    "ISO 20022",
    "FinTech",
    "JSON",
    "XSDToJSON"
  ],
  "preview": false,
  "activationEvents": [
    "onLanguage:xml",
    "onCommand: xsd.xsdtojson",
    "onCommand: xsd.xsdtotree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xsd.xsdtojson",
        "title": "JSON",
        "category": "XSD"
      },
      {
        "command": "xsd.xsdtotree",
        "title": "TREE",
        "category": "XSD"
      }
    ],
    "keybindings": [
      {
        "command": "xsd.xsdtojson",
        "key": "ctrl+alt+j",
        "mac": "cmd+alt+j",
        "when": "editorTextFocus"
      },
      {
        "command": "xsd.xsdtotree",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "xsdTree",
          "name": "XSD Structure"
        }
      ]
    },
    "configuration": {
      "title": "XSD",
      "properties": {
        "Xsd.apiURL": {
          "type": "string",
          "default": "",
          "description": "Custom API URL to convert XSD to JSON"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package",
    "publish": "npx vsce publish",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "xsd-json-converter": "1.2.6"
  }
}
